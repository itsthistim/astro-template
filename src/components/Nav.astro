---
import { Icon } from "astro-icon/components";
import ThemeSwitcher from "@/components/ThemeSwitcher.astro";
---

<div class="navbar">
	<nav>
		<div class="logo"><Icon name="ph:planet" width={24} height={24} /> Lorem Ipsum</div>
		<ul>
			<li><a class="underline-hover" href="/">Dolor</a></li>
			<li><a class="underline-hover" href="/">Sit Amet</a></li>
		</ul>
	</nav>
	<div class="right-section">
		<div class="profile">
			<Icon name="ph:user-circle" width={32} height={32} />
		</div>
		<ThemeSwitcher />
	</div>
</div>

<style>
	.navbar {
		display: grid;
		grid-template-columns: 1fr auto 1fr;
		align-items: center;
		gap: 1rem;
		padding: 1.6rem;
		z-index: 1000;
		position: sticky;
		top: 0;
	}

	nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		background-color: light-dark(rgba(235, 235, 235, 0.7), rgba(35, 35, 35, 0.7));
		backdrop-filter: blur(8px);
		padding: 10px;
		border-radius: var(--radius-full);
		min-width: 570px;
		grid-column: 2;
	}

	.right-section {
		display: flex;
		align-items: center;
		gap: 1rem;
		justify-self: end;
		grid-column: 3;
	}

	ul {
		list-style: none;
		display: flex;
		gap: 1.5rem;
		padding: 0 1.5rem;
	}

	a {
		color: light-dark(#000, #fff);
		text-decoration: none;
		transition: color 0.3s ease;
	}

	.logo {
		font-weight: bold;
		font-size: 1.5rem;
		padding: 0 1.5rem;
	}
</style>
